<% comment_owner = comment.owner == @user %>
<% comment_type = "current-user-comment apply_comment_owner_border root" if root && comment_owner %>
<% comment_type = cycle('listing-line-odd', 'listing-line-even') + " apply_border root" if root && !comment_owner %>
<% comment_type = "current-user-comment sub" if !root && comment_owner %>
<% comment_type = cycle('listing-line-odd', 'listing-line-even') + " sub" if !root && !comment_owner %>

<div class="<%= comment_type %> comment-body">
   <div style="font-size :70%;float:right;"><%= image_tag "comment.png" %>   <%= "#{comment.owner.display_name(@post)}" %><br/>
    <%  if parent_comment %> 
        <%= "#{distance_of_time_in_words(parent_comment.created_at,comment.created_at) + " later"}" %> <br/>
      <% else %>
        <%= "#{time_ago_in_words(comment.created_at) + " ago"}" %> <br/>
      <% end %>
  <%= image_tag comment.owner.avatar.url(:thumb),:size=> "32x32"  if @user.avatar.file? %></div>

  <div id="comment_body_<%= comment.id %>" style="width:80%;text-align:justify;">  <%= comment.body %></div>
  <% if comment.owner == @user  %>
      <%= in_place_rich_editor "comment_body_#{comment.id}"  ,:url => { :controller => :comments, :action => :set_comment_body, :post_id => @post.id, :id => comment.id, :uid => params[:uid]}, :mode => 'tinymce_advanced_with_save_options' %>
  <% end %>
  <span style="float:left;clear:left;">
  <%= link_to_function("#{image_tag("comment_add.png")} reply") do |page|
                  page.visual_effect  :toggle_blind, "reply_#{comment.id}"
                end  %>
   </span>
    <div id= reply_<%="#{comment.id}"%> class="sub  new-comment comment-body" style="display: none;">
        <%  reply_comment = Comment.new(:body => "Click here to add your comment") %>
        <div style="font-size :70%;float:right;"> <%= image_tag "comment.png" %>  <%= "#{@user.display_name(@post)}" %> </div>
        <div id="comment_reply_body_<%=  comment.id %>">  <%= reply_comment.body %></div>        
        <%= in_place_rich_editor "comment_reply_body_#{comment.id}", :url => { :controller => :comments, :action => :create, :post_id => @post.id, :id => comment.id, :uid => params[:uid]}, :mode => 'tinymce_advanced_with_save_options' %>
    </div>

  <%= render :partial => "/comments/comment", :collection => comment.children , :locals => {:root => nil,:parent_comment => comment } %>

</div>
