  <script type="text/javascript">
        jQuery.noConflict();
        var $j = jQuery;
     </script>
  <script  type="text/javascript">
  $j(function(){  // $(document).ready shorthand
     $j('#flash-notice').fadeOut(8000);
     $j('#flash-error').fadeOut(8000);
});
  </script>
</head>
<body>

<div id="header">
<strong class="logo">
<a href="/"><%= image_tag "evlogo.png" %></a>
</strong>
<ul>
  <li><% link_to "Home", root_url %></li>
  <% if current_user && current_user.activated? %>
    <li><%= link_to "#{h current_user.display_name}", :controller => 'users', :action => 'show' %></li>
    <li><%= link_to "My Posts (#{current_user.posts.count})", posts_path if current_user.activated? %></li>
    <li><%= link_to_if current_user.admin? , "My Contacts", {:controller => 'users', :action => 'contacts'} %></li>
    <li><%= link_to "Logout", logout_path %></li>
    <li><%= link_to_if current_user.admin?,  "Admin", admin_path %></li>

   <% else %>
     <li><%= link_to "Sign Up", new_user_path %></li>
     <li><%= link_to "Login", login_path %></li>    
   <% end %>
</ul>
</div>
  
<% if flash[:notice] %>
  <div id="flash-notice">
      <p><%= flash[:notice] %></p>
  </div>
<% end %>
<% if flash[:error] %>
  <div id="flash-error">
      <p><%= flash[:error] %></p>
  </div>
<% end %>

<% if flash[:status] %>
  <div id="flash-status">
      <p><%= flash[:status] %></p>
  </div>
<% end %>
<% if controller.action_name == 'dashboard' || controller.action_name == 'index' %>
    <div id="content">
<% else %>
     <div id="gen-content">
<% end %>
      
<%= yield %>
       
</div>
