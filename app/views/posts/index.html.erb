<script type="text/javascript">
        $j(function(){
           $j('#tabs').tabs();
      });
 </script>
<style type="text/css">
  a.join-link, a.join-link:hover, a.join-link:visited{
    color: red;
    margin-left:10px;
}
</style>
<div id="dashboard-view">
<%= button_to 'Start New Conversation', new_post_path, :class => 'submit' %>

<div id="tabs">
      <ul>
              <li><a href="#joined-posts">My Posts</a></li>
              <li><a href="#shared-posts">Shared Posts</a></li>
      </ul>

<div id='shared-posts'> 
  
<% count = 1 %>
<% @shared_posts.each do |post| %>
  <div class="index"></div>
   <div class="<%= cycle('listing-line-odd', 'listing-line-even') %> post-item">
    <span style="color:green"><%  "#{count}." %> <% count = count + 1 %></span>
    <div class ="read-post"><%= link_to  h(post.subject.capitalize), post.get_url_for(@user,'show')  %></div>
    <% if post.url != "Add a link" %>
    <div style="font-weight:normal;clear:both;"><%= link_to  h(post.url), h(post.url) %> </div>
    <% end %>

    <span class="poststat"><%= link_to "#{get_comments_count(post)} | #{get_participants_count(post)} | " + "Updated "+ "#{time_ago_in_words(post.updated_at)}" + " ago " + "by #{last_updated_by(post)}  | " , post.get_url_for(@user,'show'), :class => 'dashboard-comments' %>
    <%= link_to "Join" , { :action => "" },:class => 'join-link' %>
    </span>

    <span class="timestamp">started by <%= post.owner.email == current_user.email ? "Me" : post.owner.display_name %>      
    </span>

   </div>
<% end %>
  
</div>

<div id='joined-posts'>
  
<% count = 1 %>
<% @posts.each do |post| %>
  <div class="index"></div>
   <div class="<%= cycle('listing-line-odd', 'listing-line-even') %> post-item">
    <span style="color:green"><%  "#{count}." %> <% count = count + 1 %></span>    
    <div class ="<%= post.unread_comments_for(@user) > 0 ? "unread-post" : "read-post" %>"><%= link_to  h(post.subject.capitalize), post.get_url_for(@user,'show')  %></div>
    <% if post.url != "Add a link" %>
    <div style="font-weight:normal;clear:both;"><%= link_to  h(post.url), h(post.url) %> </div>
    <% end %>

    <span class="poststat"><%= link_to "#{get_comments_count(post)} | #{get_participants_count(post)} | " + "Updated "+ "#{time_ago_in_words(post.updated_at)}" + " ago " + "by #{last_updated_by(post)}" , post.get_url_for(@user,'show'), :class => 'dashboard-comments' %></span>

    <span class="timestamp">started by <%= post.owner.email == current_user.email ? "Me" : post.owner.display_name %>
      <% if post.owner == @user %>
          <%= link_to '[X]', post, :confirm => 'Are you sure? This will wipe out this conversation and all of its comments.', :method => :delete %>
      <% end %>
    </span>

   </div>
<% end %>
  
</div>
</div>
</div>