<h1>Listing posts</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Created by</th>
    <th>Url</th>
    <th>Unique</th>
    <th>Privacy</th>
    <th>Note</th>
    <th>Description</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%=h post.subject %></td>
    <td><%=h post.created_by %></td>
    <td><%=h post.url %></td>
    <td><%=h post.unique_id %></td>
    <td><%=h post.privacy %></td>
    <td><%=h post.note %></td>
    <td><%=h post.description %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', new_post_path %>