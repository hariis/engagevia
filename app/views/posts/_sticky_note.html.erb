<!--If there is no note, then do not show this at all to participants (i.e non-owner) -->
<% if @post.owner == @user || !@post.note.include?('Keep some notes here') || true %>
<div id="sticky-note">
  <h3 style="border-bottom:1px solid #fff;text-align:center;">Sticky Note </h3>
  <% if @post.owner == @user  || true %>
  <%= in_place_rich_editor_field :post, :note, {}, :mode => 'tinymce_advanced_stripped_options' %>
  <% else %>
   <%= @post.note %>
   <% end %>
</div>
<% end %>

